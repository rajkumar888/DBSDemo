<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Suite" parallel="tests" verbose="1" thread-count="3">

	<test name="Test Firefox" preserve-order="true">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="runner.Runner" />
		</classes>
	</test>

	<test name="Test Chrome" preserve-order="true">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="runner.Runner" />
		</classes>
	</test>

	<test name="Test MobileChrome" preserve-order="true">
		<parameter name="browser" value="MobileChrome" />
		<classes>
			<class name="runner.Runner" />
		</classes>
	</test>

</suite> 
