<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Suite" parallel="tests" verbose="1" thread-count="3">

	<test name="Test Firefox Web" preserve-order="true">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="cloud.CloudWebBrowsers" />
		</classes>
	</test>

	<test name="Test Chrome Web" preserve-order="true">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="cloud.CloudWebBrowsers" />
		</classes>
	</test>

	<test name="Test Chrome Mobile" preserve-order="true">
		<parameter name="browser" value="MobileChrome" />
		<classes>
			<class name="cloud.CloudMobileChrome" />
		</classes>
	</test>

</suite> 
